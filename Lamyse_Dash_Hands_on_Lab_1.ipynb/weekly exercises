      "metadata": {
        "id": "PD-d91Nrd3a5"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "# Run the Dash app\n",
        "if __name__ == '__main__':\n",
        "    app.run_server(debug=True)\n"
